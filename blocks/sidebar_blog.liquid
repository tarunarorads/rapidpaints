
<button aria-controls="hdt-blogs-sidebar-drawer" class="lg:hdt-hidden hdt-flex hdt-align-center hdt-sidebar-btn hdt-fixed {% if section.settings.sidebar_position == 'left' %} hdt-left-0{% else %}hdt-right-0{% endif %}" color-scheme="{{ section.settings.color_scheme }}">
  <span class="hdt-btn-icon">
    <svg width="24px" height="24px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21 3C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3H21ZM7 5H4V19H7V5ZM20 5H9V19H20V5Z"></path></svg>
  </span>
</button>
<aside class="hdt-main-sidebar hdt-col hdt-sidebar-{{ section.settings.sidebar_size }} {% if section.settings.sidebar_position == 'left' %} lg:hdt-order-first hdt-left-0 hdt-blogs-sidebar-left{% else %}hdt-right-0 hdt-blogs-sidebar-right{% endif %}" color-scheme="{{ section.settings.color_scheme }}">
  <hdt-drawer id="hdt-blogs-sidebar-drawer" class="hdt-drawer hdt-sidebar-drawer hdt-hidden {% if section.settings.sidebar_mode != "drawer" %}lg:hdt-block {% endif %}{% if section.settings.sidebar_position == 'left' %}hdt-left-0{% else %}hdt-right-0{% endif %}" effect="{{ section.settings.sidebar_position }}">
    <div slot="header" class="">
      <h6 class="hdt-flex hdt-align-center hdt-sidebar-title hdt-text-sm hdt-font-semibold">
        <span>{{- 'products.sidebar.label' | t -}}</span>
      </h6>
    </div>
    <div class="hdt-blogs-sidebar-inner">
      {%- content_for "blocks" -%}
    </div>
  </hdt-drawer>
</aside>

