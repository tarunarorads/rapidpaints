
{% liquid
  if block.settings.article != blank
    assign article = block.settings.article
    assign blog_handle = article.handle | split: '/' | first
    assign blog = blogs[blog_handle]
  endif
%}
{%- liquid
   case block.settings.article_des
    when '1'
      render 'post_loop_1', blog: blog, article: article
    when '2'
      render 'post_loop_2', blog: blog, article: article
    when '3'
      render 'post_loop_3', blog: blog, article: article
    when '4'
      render 'post_loop_4', blog: blog, article: article
    when '5'
      render 'post_loop_5', blog: blog, article: article
    when '6'
      render 'post_loop_6', blog: blog, article: article
    when '7'
      render 'post_loop_7', blog: blog, article: article
    when '8'
      render 'post_loop_8', blog: blog, article: article
  endcase
-%}

