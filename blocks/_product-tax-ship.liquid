{%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
  <div class="hdt-product-info__item hdt-product__tax-ship" {{ block.shopify_attributes }}>
    <div class="hdt-product__policies hdt-s-text2 hdt-rte" data-product-policies>
      {%- if cart.taxes_included -%}
        {{ 'products.product.include_taxes' | t }}
      {%- endif -%}
      {%- if shop.shipping_policy.body != blank -%}
        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
      {%- endif -%}
    </div>
  </div>
{%- endif -%}
{% schema %}
{
  "name": "t:sections.main-product.blocks.tax_ship.name",
  "tag": null,
  "presets": [{ "name": "t:sections.main-product.blocks.tax_ship.name" }]
}
{% endschema %}