<!-- blocks/lookbook.liquid -->
<div class="hdt-lookbook-item hdt-slider__slide hdt-w-full" {{ block.shopify_attributes }}>
  
  <div class="hdt-item-inner hdt-relative hdt-eff-{{ block.settings.b_effect }} hdt-eff-img-{{ block.settings.img_effect }} hdt-oh">
    <div calc-nav class="hdt-image hdt-ratio" style="--aspect-ratioapt: {{ block.settings.image.aspect_ratio | default: 1.7777 }}">
      {%-liquid
        if section.settings.section_layout == "full_width" 
          assign sizes = '(min-width: 1150px) calc( 100vw * 12 / ' | append: section.settings.col_dk | append: ' / 12), (min-width: 768px) calc( 100vw * 12 / ' | append: section.settings.col_tb | append: ' / 12), calc(100vw * 12 / ' | append: section.settings.col_mb | append: ' / 12)'
        else
          assign sizes = '(min-width: 1150px) calc( ' | append: settings.page_width | append: 'px * 12 / ' | append: section.settings.col_dk | append: ' / 12), (min-width: 768px) calc( 100vw * 12 / ' | append: section.settings.col_tb | append: ' / 12), calc(100vw * 12 / ' | append: section.settings.col_mb | append: ' / 12)'
        endif
        if block.settings.image != blank
          echo block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', width: block.settings.image.width, height: block.settings.image.height, class: 'hdt-obj-eff', widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3400,3800', sizes: sizes
        else 
          echo 'blog-apparel-1' | placeholder_svg_tag: 'placeholder-svg hdt-obj-eff'
          endif
      -%}
    </div>
    <div class="hdt-pin-group hdt-full-width-link hdt-pe-none">
      {% content_for "blocks" %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:blocks.lookbook.name",
    "tag": null,
    "blocks": [
      {
        "type": "pin-product"
      },
      {
