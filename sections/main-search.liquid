{%- comment -%}{{ 'hdt-card-products.css' | asset_url | stylesheet_tag }}{%- endcomment -%}
{%- liquid
  echo 'hdt-main-pages.css' | asset_url | stylesheet_tag
  echo 'hdt-pagination.css' | asset_url | stylesheet_tag
  assign color_list = 'products.theme_settings.color' | t | downcase | strip | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | uniq
  assign size_list = 'products.theme_settings.size' | t | downcase | strip | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | uniq
  assign products_id = 'products-' | append: section.id
  if section.settings.enable_num_cols_selector
    assign arr_col_from_attr = cart.attributes.products_items_per_row | split: '.'
  endif
  assign col_mb = section.settings.col_mb | plus: 0
  assign col_tb = section.settings.col_tb | plus: 0
  assign col_dk = section.settings.col_dk | plus: 0
  assign col_mobile = arr_col_from_attr[0] | default: col_mb | plus: 0
  assign col_tablet = arr_col_from_attr[1] | default: col_tb | plus: 0
  assign col_tablet = col_tablet | at_most: col_dk | plus: 0
  assign col_desktop = arr_col_from_attr[2] | default: col_dk | plus: 0
  assign placeholder_img = settings.placeholder_img
-%}
{%- liquid
  assign current_width = settings.page_width | append: 'px'
  assign current_width_tb = '100vw'
  assign current_width_mb = '100vw'
  if section.settings.full_width
      assign current_width = '100vw - 100px'
      assign current_width_tb = '100vw - 20px'
      assign current_width_mb = '100vw - 10px'
  endif
  if section.settings.space_items == "x"
    assign space_item = settings.spacing_grid_horizontal
    assign space_item_tb = settings.spacing_grid_horizontal | divided_by: 2
    assign space_item_mb = settings.spacing_grid_horizontal | divided_by: 2
  else
    assign space_item = section.settings.space_items
    assign space_item_tb = space_item | times: 0.666 | round
    assign space_item_mb = space_item | times: 0.333 | round
  endif
-%}

{%- style -%}
  #shopify-section-{{ section.id }}{
    --section-pt: {{ section.settings.padding_top }}px;
    --section-pb: {{ section.settings.padding_bottom }}px; 
    --section-prate: {{ section.settings.padding_rate }};
  }
  #{{ section.id }} .hdt-row-grid:not(.hdt-suggest-products) {
    --spacing-x: {{ space_item_mb }}px;
  } 
  @media(min-width: 768px){
    #{{ section.id }} .hdt-row-grid:not(.hdt-suggest-products) {
      --spacing-x: {{ space_item_tb }}px;
    } 
  }
  @media(min-width: 1150px){
    #{{ section.id }} .hdt-row-grid:not(.hdt-suggest-products) {
      --spacing-x: {{ space_item }}px;
    } 
  }
{%- endstyle -%}
{%- capture sizes -%}
  (min-width: 1150px) calc(({{ current_width }} -  {{ space_item }} * {{ section.settings.col_dk | minus: 1 }}) * {{ 1.00 | divided_by: section.settings.col_dk | round: 2 }}) {{- -}}
  , (min-width: 768px) calc( ({{ current_width_tb }} - {{ space_item_tb }} * {{ section.settings.col_tb | minus: 1 }} ) * {{ 1.00 | divided_by: section.settings.col_tb | round: 2 }})  {{- -}}
  , calc( ({{ current_width_mb }} - {{ space_item_mb }} * {{ section.settings.col_mb | minus: 1 }} ) * {{ 1.00 | divided_by: section.settings.col_mb | round: 2 }})
{%- endcapture -%}
{%- assign products_suggests = page.metafields.theme.brand.value.search.value | default: settings.products_suggest -%}
<div id="{{ section.id }}" main-content class="hdt-main-search hdt-section-spacing hdt-s-gradient" color-scheme="{{ section.settings.color_scheme }}">
  <div class="hdt-container{%- if section.settings.full_width -%}-full{% endif %}">
    <div class="hdt-shop-content">
      {%- if search.performed == false -%}
        <div id="hdt-search-form" class="hdt-main-search-content">
          <div class="hdt-search-head hdt-text-center">
            <div class="hdt-main-search-inner">
              <form data-frm-search action="{{ routes.search_url }}" method="get" class="hdt-search__form hdt-pr" role="search">
                <input type="hidden" name="resources[limit_scope]" value="each">
								<input type="hidden" name="resources[options][fields]" value="title,body,tag,product_type,variants.title,vendor,variants.sku">
                <div class="hdt-search-inner hdt-relative hdt-oh hdt-flex">
                  <input type="hidden" name="resources[options][fields]" value="title,body,tag,product_type,variants.title,vendor,variants.sku">
                  <input data-input-search class="hdt-input hdt-search-input hdt-text-base hdt-font-normal" autocomplete="off" type="text" name="q" placeholder="{{ 'general.search.search' | t }}">
                  <button data-submit-search class="hdt-mini-search__submit hdt-button-block hdt-btn hdt-relative hdt-oh hdt-btn-hover-accent" type="submit">
                    <svg id="icon-h-search" viewBox="0 0 18 19" width="22" height="23" fill="none">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M11.03 11.68A5.784 5.784 0 112.85 3.5a5.784 5.784 0 018.18 8.18zm.26 1.12a6.78 6.78 0 11.72-.7l5.4 5.4a.5.5 0 11-.71.7l-5.41-5.4z" fill="currentColor"></path></svg>
                    <div class="hdt-loading__spinner hdt-hidden">
                      <svg width="16" height="16" aria-hidden="true" focusable="false" role="presentation" class="hdt-svg__spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg"><circle class="hdt-path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle></svg>
                    </div>
                  </button>
                </div>
                {%- assign list_hotkey = settings.list_hotkey -%}
                {%- if settings.show_search_hotkey and list_hotkey != blank -%}
                  {%- capture link_suggest -%}
                  {{ routes.predictive_search_url }}?type=product&options%5Bunavailable_products%5D={{ settings.unavailable_prs }}&options%5Bprefix%5D=last&q=
                  {%- endcapture -%}
                  {%- assign arr_keys = list_hotkey | replace: ' ,', ',' | replace: ', ', ',' | split: ',' -%}
                  {%- assign arr_keys2 = arr_keys | join: ',|nt' | split: '|nt' -%}

                  <div data-listKey class="hdt-mini-search__keys">
                    <span class="hdt-mini-search__label">{{ 'general.search.quick_search' | t }}</span>
                    <ul class="hdt-mini-search__listKey hdt-d-inline-block">
                      {%- for key in arr_keys %}{% assign key_strip = key | strip -%}
                      <li class="hdt-d-inline-block"><a data-key='{{ key_strip | escape }}' href="{{ link_suggest }}{{ key | strip | url_encode }}">{{ arr_keys2[forloop.index0] }} </a></li>
                      {% endfor -%}
                    </ul>
                  </div>
                {%- endif -%}
                <div data-listsuggest-search data-listKey class="hdt-mini-search__keys">
                    {%- if predictive_search.resources.queries.size > 0 -%}
                    <span class="hdt-mini-search__label">{{ 'general.search.suggestions' | t }}</span>
                    <ul class="hdt-mini-search__listSuggest hdt-d-inline-block" style="--li-pl: 0px">
                      {%- for query in predictive_search.resources.queries -%}
                        <li id="query-{{ forloop.index }}" class="hdt-d-inline-block" role="option" aria-selected="false">
                          <a href="{{ routes.predictive_search_url }}?type=product&options%5Bunavailable_products%5D={{ settings.unavailable_prs }}&options%5Bprefix%5D=last&q={{ query.text }}" data-key='{{ query.text | escape }}' class="hdt-mini-search-suggest" tabindex="-1" aria-label="{{ query.text }}">
                            {{ query.styled_text }}{% unless forloop.last %},{% endunless %}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>
              </form>
              {%- if settings.search_quick_link != blank -%}
                <div class="hdt-col-quicklink hdt-text-base hdt-flex hdt-align-center">
                  <span class="hdt-search-content-title hdt-font-semibold">{{ 'general.search.quicklink_title' | t }}:</span>
                  <div class="hdt-quicklink-list hdt-font-normal">
                  {%- for link in settings.search_quick_link.links -%}
                    <span class="hdt-quicklink-item hdt-relative hdt-inline-flex hdt-align-center">
                      <a href="{{ link.url }}" class="hdt-quick-link hdt-text-base hdt-font-normal hdt-inline-flex">{{ link.title }}</a>
                    </span>
                  {%- endfor -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
          {%- if settings.products_suggest != blank -%}
            <div class="hdt-search-suggest">
              <h6 class="hdt-search-content-title hdt-font-medium">{{ 'general.search.search_content_site' | t }}</h6>
              <div class="hdt-search-hidden-inner">
                <div data-skeleton-search class="hdt-skeleton_wrap hdt-hidden">
                  <div class="hdt-row hdt-row-products">
                    {%- for i in (1..6) -%}
                      <div class="hdt-col-item">
                        <div class="hdt-skeleton_img"></div>
                        <div class="hdt-skeleton_txt1"></div>
                        <div class="hdt-skeleton_txt2"></div>
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
                 <div class="hdt-search-suggest-content">
                  <div data-collection-url="{{ collection.url }}" data-contentlm-replace class="hdt_box_pr_grid hdt-suggest-products hdt-products hdt-justify-content-center hdt-ratio--{{ section.settings.image_ratio }}{% unless section.settings.image_size %} hdt-ratio--contain{% endunless %} hdt-row-grid md:hdt-grid-cols-2 hdt-grid-cols-1 hdt-gx-md-0 hdt-gy-md-0 hdt-gx-0 hdt-gy-0">
                    {%- liquid
                      if products_suggests != blank
                        for product in products_suggests limit: 6
                          render 'pr_loop_item', section_id: section.id, product: product, show_vendor: settings.predictive_search_show_vendor, sizes: "80px", widths: "80, 160, 240, 320"
                        endfor
                      endif -%}
                  </div>
                  <div class="hdt-search-suggest-bottom hdt-text-center">
                    <a class="hdt-viewall-btn hdt-flex hdt-align-center hdt-justify-center" href="{{ collection.url | default: routes.all_products_collection_url }}">{{ 'general.pagination.view_all' | t }} <svg id="t4s-icon-btn" width="14" height="10" viewBox="0 0 14 10" fill="none">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"></path>
                    </svg></a>
                  </div> 
                </div>
              </div>
            </div>
          {%- endif -%}
        </div>
      {%- else -%}
        {%- paginate search.results by section.settings.products_count -%}
