                {%- if search_articles_list != blank -%}
                  {% for article in search_articles_list %}
                    <div class="hdt-article-item hdt-search-article-item" >
                      <div class="hdt-article hdt-article-style-1" timeline hdt-reveal="slide-in">
                        <div class="hdt-article-inner">
                          <div class="hdt-article-thumb hdt-relative hdt-oh">
                              <a href="{{ article.url }}" class="hdt-block hdt-eff-img-zoom">
                                <div calc-nav class="hdt-article-img hdt-oh hdt-ratio" style="--aspect-ratioapt:{{ article.image.aspect_ratio | default: 1 }}">
                                  {% if article.image %}{{ article.image | image_url: width: article.image.width | image_tag: loading: 'lazy', width: article.image.width, height: article.image.height, class: 'hdt-full-image hdt-object-cover hdt-obj-eff md:hdt-block ', sizes: sizes , widths: '375,550,750,1100,1500,1780,1920,2000,3000,3840' }}{% endif %}
                                </div>
                              </a>                            
                            <div class="hdt-article-label hdt-absolute">
                              <div class="hdt-article-category hdt-row-flex">
                                {%- if  section.settings.show_blog_title == 'blog_current' -%}
                                  <a class="hdt-text-xs hdt-btn hdt-oh hdt-relative hdt-btn-solid hdt-font-bold" href="{{ blog.url }}"><span>{{ blog.title }}</span></a>
                                {%- else -%}
                                  {%- assign article_tags = article.tags | join: ';' | split: ';' -%}
                                  {%- assign blog_tags = article_tags | where: 'blog_' -%}
                                  {%- for tag in blog_tags -%}
                                    <a class="hdt-text-xs hdt-btn hdt-oh hdt-relative hdt-btn-solid hdt-font-bold" href="{{ blog.url }}/tagged/{{ tag | handle }}"><span>{{ tag | remove : 'blog_' | strip }}</span></a>
                                  {%- endfor -%}
                                {%- endif -%}
                              </div>
                            </div>
                          </div>
                          <div class="hdt-article-content_wapper">
                            <div class="hdt-article-info hdt-flex hdt-flex-col hdt-align-{{ section.settings.content_align }}">
                              <h6 class="hdt-article-title hdt-line-clamp hdt-font-medium hdt-s-text"><a href="{{ article.url }}">{{ article.title }}</a></h6>
                              <div class="hdt-article-btn">
                                  <a href="{{ article.url }}" class="hdt-btn hdt-oh hdt-inline-flex hdt-align-center hdt-justify-center hdt-relative hdt-btn-link hdt-text-base hdt-font-semibold hdt-article-btn__readmore"><span>{{ 'blogs.article.read_more' | t }}</span>
                                  </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                {%- endif -%}
                {%- if search_pages_list != blank -%}
                  {% for page in search_pages_list %}
                    <div class="hdt-page-item">
                      <div class="hdt-page-item-inner" timeline hdt-reveal="slide-in">
                        <a href="{{ page.url }}" class="hdt-page-img hdt-ratio" {% if section.settings.image_ratio == 'adapt_image' %} style="--aspect-ratioapt: 1"{% endif %}>
                          {%- if placeholder_img -%}
                            {{ placeholder_img | image_url: width: placeholder_img.width | image_tag: loading: 'lazy', width: placeholder_img.width, class: 'hdt-page-img', sizes: sizes , widths: '375,550,750,1100,1500,1780,1920,2000,3000,3840' }}
                          {%- else -%}
                            <span class="hdt-page-label hdt-absolute hdt-top-0 hdt-right-0">{{ page.title }} - {{ shop.name }}</span>
                          {%- endif -%}
                        </a>
                        <a href="{{ page.url }}" class="hdt-page-title  hdt-font-medium hdt-inline-flex hdt-s-text">{{ page.title }}</a>
                      </div>
                    </div>
                  {% endfor %}
                {%- endif -%}
              </hdt-reval-items>

              {%- if paginate.pages > 1 -%}
                {%- render 'pagination', paginate: paginate, anchor: '', section_id: section.id , pagination_type: section.settings.pagination_type, append_id: products_id, paginate_pos: section.settings.paginate_pos, dis_pagination: section.settings.dis_pagination -%}
              {%- endif -%}
          {%- endif -%}
        {%- endpaginate -%}
      {%- endif -%}
    </div>
  </div>
</div>
