{%- liquid
  assign image = article.image
-%}
<div class="hdt-article-sidebar hdt-ratio-{{ image_ratio }} md:hdt-ratio-{{ image_ratio }} hdt-ratio--{{ image_size }}" timeline hdt-reveal="slide-in ">
  <div class="hdt-article-inner hdt-flex hdt-align-center hdt-relative ">
    <div class="hdt-article-thumb hdt-relative hdt-oh">
        <a href="{{ article.url }}" class="hdt-block hdt-eff-img-zoom">
          <div class="hdt-article-img hdt-oh hdt-ratio hdt-radius-sm" style="--aspect-ratioapt-md:{{ image.aspect_ratio | default: 1.3 }};--aspect-ratioapt:{{ image.aspect_ratio | default: 1.3 }}">
            {%- if image != blank -%}
              {{ image | image_url: width: image.width | image_tag: loading: 'lazy', width: image.width, height: image.height, class: 'hdt-full-image hdt-object-cover hdt-obj-eff md:hdt-block', sizes: '100vw', widths: '375,550,750,1100,1500,1780,1920,2000,3000,3840' }}
            {%- else -%}
              {%- capture image -%}blog-apparel-{%- cycle "1", "2", "3" -%}{%- endcapture -%}
              {{ image | placeholder_svg_tag }}
            {%- endif -%}
          </div>
        </a>
    </div>
    <div class="hdt-article-content_wapper">
      <div class="hdt-article-info hdt-flex hdt-flex-col">
        <h6 class="hdt-article-title hdt-line-clamp hdt-h6 hdt-font-medium hdt-text-base hdt-s-text"><a href="{{ article.url }}">{{ article.title }}</a></h6>
          <span class="hdt-article-time hdt-s-text2 hdt-text-base">
            {%- if date contains "%" -%}
              {{ article.published_at | time_tag: date }}
            {%- else -%}	
              {{ article.published_at | time_tag: format: date }}
            {%- endif -%}
          </span>
      </div>
    </div>
  </div>
</div>